<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:background="#fff">

    <ImageView
        android:id="@+id/image_done_add"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/ic_school_blue"/>

    <TextView
        android:id="@+id/text_content_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_done_add"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/dialog_permission"
        android:textColor="#000000"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button_allow"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/text_content_success"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        android:background="#fff"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        android:text="ALLOW"
        android:textAlignment="center"
        android:textColor="#5c82fd"
        android:textSize="14sp"
        android:textStyle="bold" />
</RelativeLayout>
